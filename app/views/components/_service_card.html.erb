<article class="post style2 <%= style %>">
  <div class="content">
    <header>
      <span class="category"><%= small_title %></span>
      <h3><%= large_title %></h3>
    </header>
    <p><%= text %></p>
    <ul class="actions">
      <li><a href="#footer" class="button next">Contact us</a></li>
    </ul>
  </div>
  <div class="image" data-position="center"><%= image_tag(picture) %></div>
</article>
